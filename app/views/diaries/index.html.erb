<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <div class="jumbotron">
          <%= render "lego" %>
          <%= link_to '새로쓰기', new_diary_path ,class: "btn btn-outline-dark"%>
        </div>
      </div>
      <div class="col-md-5">
        <div class="form-group">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>성감대</th>
              <th>Memo</th>
              <th>link</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
              <% @diaries.each do |diary| %>
            <tr>
              <td><%= diary.category %></td>
              <td><%= truncate(diary.memo,:escape => false, :omission => '...' )%></td>
              <td><%= link_to 'Show', diary ,class: "btn btn-outline-dark btn-sm"%></td>
              <td><%= link_to 'Edit', edit_diary_path(diary) ,class: "btn btn-outline-dark btn-sm" %></td>
              <td><%= link_to 'Destroy', diary, method: :delete, data: { confirm: '삭제하시겠습니까?' } ,class: "btn btn-outline-dark btn-sm"%></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
</div>



