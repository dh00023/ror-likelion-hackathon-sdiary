<td class="row" id="comment-<%=comment.id%>">  
    <p class="text ml-3"><%= comment.content %></p>
    <p class="ml-auto text-muted mr-3"><%= comment.created_at.strftime("%Y.%m.%d %H:%M") %></p>
    <% if comment.user_id == current_user.id %> 
    <%= link_to "삭제", comment_path(comment),
                        method: :delete,
                        remote: true,
                        data: {confirm: "정말로 삭제하시겠습니까?"} %>
    <% end %> 
</td>  