<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="jumbotron" id="postjumbo">
    
    <div class="form-row">
      <div class="form-group col-md-8">
        <div class="field" >
          <%= f.label :제목 , class: "col-form-label"%>
          <%= f.text_field :title ,class: "form-control"%>
        </div>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :카테고리 , class: "col-form-label"%>
        <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "카테고리를 선택해주세요"},class: "form-control" %>
      </div>
    </div>
    <hr class="my-4">
    <div class="form-group">
      <%= f.label :내용 , class: "col-form-label"%>
      <%= f.text_area :content, :class => "tinymce", :rows => 15, :cols => 100 %>
      <%= tinymce %>
    </div>
  </div>
  <div class="actions float-right">
      <%= f.submit '작성하기' , class: "btn btn-dark btn-lg btn-thin"%>
    </div>
<% end %>



